            </Grid>
            
            <Grid Grid.Row="1">
                <ListView x:Name="RateComparisionList" HasUnevenRows="True" SeparatorVisibility="None" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Margin="5" VerticalOptions="Center" CornerRadius="5" HasShadow="True" Padding="0,0,2,2" BackgroundColor="#a8aaa9">
                                    <Frame VerticalOptions="Center" BackgroundColor="White" CornerRadius="5" HasShadow="True" Padding="5,10,5,10">
                                        <Grid ColumnSpacing="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.45*"/>
                                                <ColumnDefinition Width="0.25*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Padding="10">
                                                <Image 
                                                    VerticalOptions="FillAndExpand" 
                                                    HorizontalOptions="FillAndExpand" 
                                                    Aspect="AspectFill" 
                                                    Source="{Binding imagePath}">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                            NumberOfTapsRequired="1"
                                                            Tapped="XFPlanDetail_Clicked"/>
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Label Text="{Binding retailerName}" TextColor="#AB9A9A" VerticalOptions="Center" LineBreakMode="TailTruncation" HorizontalOptions="Start" FontSize="Small"/>
                                                </Grid>

                                                <Grid Grid.Row="1">
                                                    <Label Text="{Binding rate, StringFormat='{0:C2}c'}" TextColor="#AB9A9A" VerticalOptions="Center" HorizontalOptions="Start" FontSize="Small"/>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Button 
                                                        Text="{Binding duration,StringFormat='{0} Months'}" 
                                                        FontSize="Micro" 
                                                        Padding="0,0,10,0"
                                                        BorderRadius="10"
                                                        TextColor="#AB9A9A"
                                                        BackgroundColor="White"
                                                        CornerRadius="10"
                                                        HeightRequest="20"
                                                        BorderWidth="1" 
                                                        BorderColor="#AB9A9A"/>
                                                </Grid>

                                                <Grid Grid.Row="1">
                                                    <Button 
                                                        CornerRadius="5" 
                                                        BorderRadius="5" 
                                                        Text="Select" 
                                                        x:Name="XFBtnPlanDetail"
                                                        TextColor="White"
                                                        Image="next.png"                                           
                                                        ContentLayout="Right,5"                      
                                                        FontSize="Micro"
                                                        Padding="0,0,10,0"
                                                        HeightRequest="20" 
                                                        Clicked="XFBtnPlanDetail_Clicked"
                                                        BackgroundColor="#FF9408"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ActivityIndicator  Color="#F18601"
                                    IsRunning="True"
                                    x:Name="XFActivityIndicator"
                                    IsVisible="False" 
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>