                </Frame>-->
            </Grid>
            
            <Grid Grid.Row="1">
                <ListView x:Name="RateComparisionList" HasUnevenRows="True" SeparatorVisibility="None" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell Height="120">
                                <Frame Margin="5" VerticalOptions="Center" HeightRequest="-1" CornerRadius="5" HasShadow="True" Padding="0,0,2,2" BackgroundColor="#a8aaa9">
                                    <Frame VerticalOptions="Center" BackgroundColor="White" HeightRequest="-1" CornerRadius="5" HasShadow="True" Padding="5,10,5,10">
                                        <Grid ColumnSpacing="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.4*"/>
                                                <ColumnDefinition Width="0.3*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Padding="10">
                                                <Image 
                                                        VerticalOptions="FillAndExpand" 
                                                        HorizontalOptions="FillAndExpand" 
                                                        Aspect="AspectFit" 
                                                        Source="{Binding imagePath}">

                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                                NumberOfTapsRequired="1"
                                                                Tapped="XFPlanDetail_Clicked"/>
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Label
                                                        Text="{Binding retailerName}" 
                                                        TextColor="#AB9A9A" 
                                                        VerticalOptions="Center" 
                                                        HorizontalOptions="Start" 
                                                        LineBreakMode="TailTruncation" 
                                                        VerticalTextAlignment="Center"
                                                        FontSize="14"/>
                                                </Grid>

                                                <Grid Grid.Row="1">
                                                    <Label
                                                        Text="{Binding rate, StringFormat='{0:F2}c'}" 
                                                        TextColor="#AB9A9A" 
                                                        VerticalOptions="Center" 
                                                        HorizontalOptions="Start"
                                                        VerticalTextAlignment="Center"
                                                        FontSize="14"/>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Frame 
                                                            Padding="5" 
                                                            Margin="0" 
                                                            HorizontalOptions="Center" 
                                                            BackgroundColor="White" 
                                                            BorderColor="#AB9A9A" 
                                                            CornerRadius="5" 
                                                            HeightRequest="-1">

                                                        <Label 
                                                                Margin="5,0,5,0" 
                                                                Text="{Binding duration,StringFormat='{0} Months'}" 
                                                                FontSize="14"
                                                                TextColor="#AB9A9A" 
                                                                HeightRequest="25"
                                                                VerticalTextAlignment="Center"
                                                                HorizontalOptions="Center" 
                                                                VerticalOptions="Center"/>
                                                    </Frame>

                                                    <!--<Button 
                                                            Text="{Binding duration,StringFormat='{0} Months'}" 
                                                            FontSize="14" 
                                                            Padding="0,0,10,0"
                                                            BorderRadius="10"
                                                            TextColor="#AB9A9A"
                                                            BackgroundColor="White"
                                                            CornerRadius="10"
                                                            HeightRequest="30"
                                                            BorderWidth="1" 
                                                            BorderColor="#AB9A9A"/>-->
                                                </Grid>

                                                <Grid Grid.Row="1">
                                                    <Button
                                                        x:Name="XFBtnPlanDetail"
                                                        CornerRadius="5" 
                                                        BorderRadius="5" 
                                                        Text="Select" 
                                                        TextColor="White"
                                                        Image="arrow_next.png"                                           
                                                        ContentLayout="Right,0"                      
                                                        FontSize="14"
                                                        Padding="0,0,10,0"
                                                        HeightRequest="25" 
                                                        Clicked="XFBtnPlanDetail_Clicked"
                                                        BackgroundColor="#FF9408"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <ActivityIndicator  
                    Color="#F18601"
                    IsRunning="True"
                    x:Name="XFActivityIndicator"
                    IsVisible="False" 
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>