                                            FontSize="Micro"                                   
                                            BorderRadius="10"
                                            TextColor="#AB9A9A" 
                                             BackgroundColor="White"
                                            CornerRadius="10"
                                            HeightRequest="20"
                                            BorderWidth="1" 
                                             Padding="0"
                                        Clicked="Button_licked"
                                            BorderColor="#AB9A9A"/>
